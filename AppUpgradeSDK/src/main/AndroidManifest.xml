<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.konka.appupgrade">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 强制自升级升级用于杀死当前应用-->
    <uses-permission android:name="android.permission.FORCE_STOP_PACKAGES"/>

    <!-- 从应用升级ContentProvider获取数据权限-->
    <uses-permission android:name="com.konka.appupgrade.permission.SDK_READ"/>


    <application>
        <activity android:name="com.konka.appupgrade.upgradedetail.UpgradeDetailActivity"
                android:theme="@style/AppDetailTheme"
            ></activity>

    </application>

</manifest>